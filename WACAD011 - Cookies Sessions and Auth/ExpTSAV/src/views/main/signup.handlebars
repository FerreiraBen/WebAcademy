<!-- Forms
      ================================================== -->
<div class='bs-docs-section'>
    <div class='row'>
        <div class='col-lg-12'>
            <div class='page-header'>
                <h1 id='forms'>Criar Conta</h1>
            </div>
        </div>
    </div>

    <div class='row'>
        <div class='col-lg-6'>
            <div class='bs-component'>
                <form action='/dept/create' method='post'>

                    <div class='form-group'>
                        <label class='col-form-label mt-2' for='endereco'>Nome</label>
                        <input type='text' class='form-control' name='name' value='{{dept.name}}' />
                        <div class='invalid-feedback'>{{showError errors 'name'}}</div>
                    </div>


                    <div class='form-group'>
                        <label class='col-form-label mt-2' for='endereco'>Departamento</label>
                        <select class="form-select" name='departamentoId' id="departamentos">
                            {{#each departamentos}}
                            <option value='{{id}}'>{{name}}</option>
                            {{/each}}
                        </select>
                        <div class='invalid-feedback'>{{showError errors 'endereco'}}</div>
                    </div>

                    <div class='form-group'>
                        <label class='col-form-label mt-2' for='endereco'>Endereco</label>
                        <input type='text' class='form-control' endereco='endereco' value='{{dept.endereco}}' />
                        <div class='invalid-feedback'>{{showError errors 'endereco'}}</div>
                    </div>

                    <div class='form-group'>
                        <label class='col-form-label mt-2' for='senha'>Senha</label>
                        <input id='senha' type='text' class='form-control' name='senha' />
                        <div class='invalid-feedback'>{{showError errors 'name'}}</div>
                    </div>

                    <div class='form-group'>
                        <label class='col-form-label mt-2' for='confirm-senha'>Confirmar Senha</label>
                        <input id='confirm-senha' type='text' class='form-control' name='senha' />
                        <div id='confirm-senha-error' class='invalid-feedback' style='display:block'></div>
                    </div>


                    <div class='form-group mt-2'>
                        <input type="hidden" name="_csrf" value="{{csrf}}">
                        <button class='btn btn-lg btn-primary' type='submit'>Submeter</button>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>